@inject ModelContext _context
@{
    int totalContactMessages = _context.Contacts.Count(message => !string.IsNullOrEmpty(message.Messeage));
    int totalTestimonialMessages = _context.Testmonials.Count(message => !string.IsNullOrEmpty(message.Comment));
    int totalMessagesSum = totalContactMessages + totalTestimonialMessages;

}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />

    <title>Admin Dashboard</title>

    <meta name="description" content="" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/hometem/images/icons/icon.png" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
          rel="stylesheet" />

    <!-- Icons. Uncomment required icon fonts -->
    <link rel="stylesheet" href="~/AdminTemplate/assets/vendor/fonts/boxicons.css" />

    <!-- Core CSS -->
    <link rel="stylesheet" href="~/AdminTemplate/assets/vendor/css/core.css" class="template-customizer-core-css" />
    <link rel="stylesheet" href="~/AdminTemplate/assets/vendor/css/theme-default.css" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="~/AdminTemplate/assets/css/demo.css" />

    <!-- Vendors CSS -->
    <link rel="stylesheet" href="~/AdminTemplate/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />

    <link rel="stylesheet" href="~/AdminTemplate/assets/vendor/libs/apex-charts/apex-charts.css" />

    <!-- Page CSS -->
    <!-- Helpers -->
    <script src="~/AdminTemplate/assets/vendor/js/helpers.js"></script>

    <!--! Template customizer & Theme config files MUST be included after core stylesheets and helpers.js in the <head> section -->
    <!--? Config:  Mandatory theme config file contain global vars & default theme options, Set your preferred theme option in this file.  -->
    <script src="~/AdminTemplate//assets/js/config.js"></script>

    <!--fontawesom-->
    <script src="https://kit.fontawesome.com/0e0000ed43.js" crossorigin="anonymous"></script>
</head>
<body>

    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <!-- Menu -->
            <!--LOGO-->
            <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
                <div class="app-brand demo">
                    <a asp-action="Index" asp-controller="Home" class="app-brand-link">

                        <span style="font-size:20px; font-weight:bold; color: #566a7f"> HeAndShe<span style=" color:#696cff">Store</span></span>
                    </a>

                </div>
                <!--ITEMS-->
                <ul class="menu-inner py-1">
                    <!-- Dashboard -->
                    <li class="menu-item active">
                        <a asp-action="Index" asp-controller="Admin" class="menu-link">
                            @* <i class="menu-icon tf-icons bx bx-home-circle"></i> *@


                            <i class="menu-icon fa-solid fa-house-chimney" style="color: #758596; font-size:16px;"></i>
                            <div data-i18n="Analytics">Dashboard</div>
                        </a>
                    </li>



                    <li class="menu-header small text-uppercase">
                        <span class="menu-header-text">Notifications</span>
                    </li>
                  

                    <li class="menu-item">

                        <a href="javascript:void(0);" class="menu-link menu-toggle">
                            <i class="menu-icon fa-solid fa-bell" style="color: #758596; font-size:16px;"></i>
                            <div>
                                Notifications  <span style="background:red; color:#fff; border-radius:50%; padding:1px 5px;"> @totalMessagesSum </span>
                            </div>
                        </a>


                        <ul class="menu-sub">
                            <li class="menu-item">
                                <a asp-action="ContactMessages" asp-controller="Admin" class="menu-link">
                                    <div>
                                        Contact  
                                        <span style="background:red; color:#fff; border-radius:50%; padding:1px 5px;"> @totalContactMessages </span>

                                    </div>
                                </a>

                            </li>
                            <li class="menu-item">
                                <a asp-action="TestimonialsMessages" asp-controller="Admin" class="menu-link">
                                    <div>
                                        Testimonails  <span style="background:red; color:#fff; border-radius:50%; padding:1px 5px;"> @totalTestimonialMessages </span>
                                    </div>
                                </a>
                                
                            </li>


                        </ul>
                       


                    </li>

                    <!--MANAGING-->

                    <li class="menu-header small text-uppercase">
                        <span class="menu-header-text">Supervising</span>
                    </li>
                    <li class="menu-item">
                        <a href="javascript:void(0);" class="menu-link menu-toggle">
                            <i class="menu-icon fa-solid fa-book" style="color: #758596; font-size:16px;"></i>
                            <div>Category </div>
                        </a>
                        <ul class="menu-sub">
                            <li class="menu-item">
                                <a asp-action="Index" asp-controller="Categories" class="menu-link">
                                    <div>View All Categories</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a asp-action="Create" asp-controller="Categories" class="menu-link">
                                    <div>Create New Category</div>
                                </a>
                            </li>


                        </ul>
                    </li>
                    <li class="menu-item">
                        <a href="javascript:void(0);" class="menu-link menu-toggle">
                            <i class="menu-icon fa-brands fa-product-hunt" style="color: #758596; font-size:16px;"></i>

                            <div>Product  </div>
                        </a>
                        <ul class="menu-sub">
                            <li class="menu-item">
                                <a class="menu-link" asp-action="Index" asp-controller="products">
                                    <div>View All Products</div>
                                </a>
                            </li>

                            <li class="menu-item">
                                <a class="menu-link" asp-action="Create" asp-controller="products">
                                    <div>Add New product</div>
                                </a>
                            </li>

                        </ul>
                    </li>

                    <li class="menu-item">
                        <a href="javascript:void(0);" class="menu-link menu-toggle">
                            <i class="menu-icon  fa-solid fa-user-group" style="font-size:15px;"></i>
                            <div>Users  </div>
                        </a>
                        <ul class="menu-sub">
                            <li class="menu-item">
                                <a class="menu-link" asp-action="Index" asp-controller="Customers">
                                    <div>View All Users</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a class="menu-link" asp-action="Index" asp-controller="UserLogins">
                                    <div>Users Logins</div>
                                </a>
                            </li>
                          

                        </ul>
                    </li>
                    <li class="menu-item">
                        <a href="javascript:void(0);" class="menu-link menu-toggle">
                            <i class="menu-icon  fa-solid fa-list" style="font-size:15px;"></i>
                           
                            <div>User Orders  </div>
                        </a>
                        <ul class="menu-sub">
                            <li class="menu-item">
                                <a class="menu-link" asp-action="Index" asp-controller="Orders">
                                    <div>View All Orders</div>
                                </a>
                            </li>
                           


                        </ul>
                    </li>
                    <li class="menu-header small text-uppercase"><span class="menu-header-text">Documents </span></li>

                    <li class="menu-item">
                        <a href="javascript:void(0);" class="menu-link menu-toggle">
                            <i class="menu-icon fa-solid fa-clipboard-list"></i>
                            <div>Reports  </div>
                        </a>
                        <ul class="menu-sub">
                           
                           
                            <li class="menu-item">
                                <a class="menu-link" asp-action="ProductReviews" asp-controller="Admin">
                                    <div>Products Review</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a class="menu-link" asp-action="JoinTables" asp-controller="Admin">
                                    <div>Products By Category</div>
                                </a>
                            </li>
                          
                        </ul>
                    </li>


                  

                    <li class="menu-header small text-uppercase">
                        
                        <span class="menu-header-text">Logout</span></li>

                    <li class="menu-item">
                        <a asp-action="Logout" asp-controller="LoginandRegister" class="menu-link">
                            <i class="menu-icon fa-solid fa-right-to-bracket" style="color: #758596"></i>
                            <div> Log Out</div>
                        </a>
                    </li>






                </ul>
            </aside>


            <div class="layout-page">
                <!-- Navbar -->




                <div>
                    @RenderBody()
                </div>
            </div>
        </div>

    </div>





        <!-- Core JS -->
        <!-- build:js assets/vendor/js/core.js -->
        <script src="~/AdminTemplate/assets/vendor/libs/jquery/jquery.js"></script>
        <script src="~/AdminTemplate/assets/vendor/libs/popper/popper.js"></script>
        <script src="~/AdminTemplate/assets/vendor/js/bootstrap.js"></script>
        <script src="~/AdminTemplate/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>

        <script src="~/AdminTemplate/assets/vendor/js/menu.js"></script>
        <!-- endbuild -->
        <!-- Vendors JS -->
        <script src="~/AdminTemplate/assets/vendor/libs/apex-charts/apexcharts.js"></script>

        <!-- Main JS -->
        <script src="~/AdminTemplate/assets/js/main.js"></script>

        <!-- Page JS -->
        <script src="~/AdminTemplate/assets/js/dashboards-analytics.js"></script>

        <!-- Place this tag in your head or just before your close body tag. -->
        <script async defer src="https://buttons.github.io/buttons.js"></script>






       
</body>
</html>
