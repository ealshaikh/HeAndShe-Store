@model IEnumerable<He_SheStore.Models.Orderitem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserHomeLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantitiy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantitiy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.Orderid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderitemId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrderitemId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderitemId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
