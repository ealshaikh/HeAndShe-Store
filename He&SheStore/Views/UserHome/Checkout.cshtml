@model Orderaddress
@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_UserHomeLayout.cshtml";

}



<head>
   
   

  

    <!-- Css Styles -->
    <link rel="stylesheet" href="~/TempCheckOut/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/TempCheckOut/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/TempCheckOut/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="~/TempCheckOut/css/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="~/TempCheckOut/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/TempCheckOut/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/TempCheckOut/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/TempCheckOut/css/style.css" type="text/css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.5/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.5/dist/sweetalert2.min.js"></script>


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.5/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.5/dist/sweetalert2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        .cardpayment {
            background-color: #616ec6 !important;
            border-radius: 20px;
            font-weight: 400;
            font-family: 'Chivo';
            font-size: 14px;
        }
        .checkout__title {
    color: #111111;
    font-weight: 600;
    /* text-transform: uppercase; */
    border-bottom: 1px solid #e1e1e1;
    padding-bottom: 25px;
    margin-bottom: 30px;
    padding-top: 20px;
    font-size: 18px;
    </style>
</head>

<body>

    <h1>@ViewBag.TotalAmount</h1>

    <section class="checkout spad">
        <div class="container">
            <div class="checkout__form">
                <form asp-action="Checkout" asp-controller="UserHome" method="post">
                    <div class="row">
                        <div class="col-lg-8 col-md-6">
                            <h6 class="checkout__title">Fill your info and enjoy your online shopping!</h6>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="Fname" class="control-label"></label>
                                        <input asp-for="Fname" class="form-control" required />
                                        <span asp-validation-for="Fname" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">

                                        <label asp-for="Lname" class="control-label"></label>
                                        <input asp-for="Lname" class="form-control" required />
                                        <span asp-validation-for="Lname" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">

                                        <label asp-for="Phonenumber" class="control-label"></label>
                                        <input asp-for="Phonenumber" class="form-control" placeholder="+962 786 988 785" required />
                                        <span asp-validation-for="Phonenumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">

                                        <label asp-for="Email" class="control-label"></label>
                                        <input asp-for="Email" class="form-control" placeholder="text@domain.com" required/>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">

                                        <label asp-for="Country" class="control-label"></label>
                                        <input asp-for="Country" class="form-control" placeholder="Jordan" required />
                                        <span asp-validation-for="Country" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">

                                        <label asp-for="City" class="control-label"></label>
                                        <input asp-for="City" class="form-control" placeholder="Amman" required />
                                        <span asp-validation-for="City" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">

                                        <label asp-for="Streetnumber" class="control-label"></label>
                                        <input asp-for="Streetnumber" class="form-control" placeholder="Main Street 120" required />
                                        <span asp-validation-for="Streetnumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">

                                        <label asp-for="Postalcode" class="control-label"></label>
                                        <input asp-for="Postalcode" class="form-control" placeholder="123" required />
                                        <span asp-validation-for="Postalcode" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="col-lg-4 col-md-6 ">

                            <div class="card bg-primary text-white rounded-3 cardpayment">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-4">
                                        <h5 class="mb-0">Card details</h5>
                                    </div>

                                    

                                    <div class="form-outline form-white mb-4">
                                        <label class="form-label" for="typeName">Cardholder's Name</label>
                                        <input type="text" id="typeName" name="Fullname" class="form-control form-control-lg" size="17" placeholder="Cardholder's Name" required />
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <label class="form-label" for="typeText">Card Number</label>
                                        <input type="number" id="typeText" name="CardNumber" class="form-control form-control-lg" size="17" placeholder="4444 6666 8888 7777" minlength="9" maxlength="10" required />
                                    </div>

                                    <div class="row mb-4">
                                        <div class="col-md-6">
                                            <div class="form-outline form-white">
                                                <label class="form-label" for="typeExp">Expiration</label>
                                                <input type="date" name="Expiration" id="typeExp" class="form-control form-control-lg" placeholder="DD/MM/YY" size="5" minlength="5" maxlength="10" required />
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-outline form-white">
                                                <label class="form-label" for="typeText">Cvv</label>
                                                <input type="password" name="Cvv" id="typeText" class="form-control form-control-lg" placeholder="&#9679;&#9679;&#9679;" size="1" minlength="3" maxlength="3" required />
                                            </div>
                                        </div>
                                    </div>



                                    <hr class="my-4">

                                    <button type="submit" style="background-color:white" class="btn btn-info btn-block btn-lg">
                                        <div class="d-flex ">
                                          <span style="color:black; text-align:center;">Checkout </span>
                                        </div>
                                    </button>

                                </div>

                            </div>
                            @if (TempData["ErrorBalanceAccount"] != null)
                            {
                                <p class="mt-2" style="color:red;font-size:20px ; font-weight:bold">@TempData["ErrorBalanceAccount"]</p>

                            }

                            @if (TempData["ErrorCardAccount"] != null)
                            {
                                <p class="mt-2" style="color:red ;font-size:20px; font-weight:bold">@TempData["ErrorCardAccount"]</p>

                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>






    <!-- Js Plugins -->
    <script src="~/TempCheckOut/js/jquery-3.3.1.min.js"></script>
    <script src="~/TempCheckOut/js/bootstrap.min.js"></script>
    <script src="~/TempCheckOut/js/jquery.nice-select.min.js"></script>
    <script src="~/TempCheckOut/js/jquery.nicescroll.min.js"></script>
    <script src="~/TempCheckOut/js/jquery.magnific-popup.min.js"></script>
    <script src="~/TempCheckOut/js/jquery.countdown.min.js"></script>
    <script src="~/TempCheckOut/js/jquery.slicknav.js"></script>
    <script src="~/TempCheckOut/js/mixitup.min.js"></script>
    <script src="~/TempCheckOut/js/owl.carousel.min.js"></script>
    <script src="~/TempCheckOut/js/main.js"></script>
</body>

